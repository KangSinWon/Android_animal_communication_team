<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <!--
        TODO : 날씨정보를 크게?.. 아이콘도 넣어서
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 날씨: 14도   미세먼지: 좋음"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/button_registe"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="등록"
            android:onClick="button_onclicked"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/button_search"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="찾기"
            android:onClick="button_onclicked"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/buuton_community"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="자유게시판"
            android:onClick="button_onclicked"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/button_profile"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:onClick="button_onclicked"
            android:layout_marginTop="30dp"/>

        <!--
        <Button
            android:id="@+id/button_shopping_list"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="쇼핑몰"
            android:onClick="button_onclicked"
            android:layout_marginTop="30dp"/>
            -->

        <Button
            android:id="@+id/button_db_conn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="DbConn"
            android:onClick="button_onclicked"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</LinearLayout>